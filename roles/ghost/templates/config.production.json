{
  "url": "http://localhost:2368",
  "server": {
    "port": 2368,
    "host": "0.0.0.0"
  },
  
  "database": {
    "client": "{{ghost_db_client}}",
    "connection": {
      "host": "{{ghost_db_host}}",
      "port": 3306,
      "user": "{{ghost_db_user}}",
      "password": "{{ghost_db_password}}",
      "database": "{{ghost_db_database}}"
    }
  },
  
  "mail": {
      "transport": "SMTP",
      "options": {
          "service": "Mailgun",
          "host": "smtp.eu.mailgun.org",
          "port": 465,
          "secureConnection": true,
          "auth": {
              "user": "postmaster@example.mailgun.org",
              "pass": "1234567890"
          }
      }
  },
  
  "logging": {
    "transports": [
      "file",
      "stdout"
    ]
  },
  
  "process": "systemd",
  
  "paths": {
    "contentPath": "/var/lib/ghost/content"
  }
}
